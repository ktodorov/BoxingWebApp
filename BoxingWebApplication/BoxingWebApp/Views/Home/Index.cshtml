@using Boxing.Contracts.Resources

@{
    ViewBag.Title = "Home Page";
}

<div class="boxingHomeInfo">
    <h1>@BoxingResources.ProjectTitle.ToUpper()</h1>
    <p class="boxingHomeSubInfo">@BoxingResources.AppInfo</p>
</div>

<table class="tablePanel">
    <tr>
        <td class="boxingPanel usersPanel" width="33.33%" onclick="window.location.href='/Users'">
            <h2>@BoxingResources.RegisteredUsers</h2>
            <p>
                @BoxingResources.UserInfo
            </p>
        </td>
        <td class="boxingPanel matchesPanel" width="33.33%" onclick="window.location.href='/Matches'">
            <h2>@BoxingResources.Matches</h2>
            <p>
                @BoxingResources.MatchesInfo
            </p>
        </td>
        <td class="boxingPanel boxersPanel" width="33.33%" onclick="window.location.href='/Boxers'">
            <h2>@BoxingResources.Boxers</h2>
            <p>
                @BoxingResources.BoxersInfo
            </p>
        </td>
    </tr>
</table>

<style>
    .boxingHomeInfo {
        padding: 120px 100px;
    }

    .boxingHomeInfo h1 {
        font-size: 50px;
        font-weight: bolder;
        font-family: "Segoe UI";
        color: #252;
        margin: 30px 0;
    }

    .boxingHomeSubInfo {
        color: #585;
        font-size: 20px;
        font-weight: bold;
        font-family: "Segoe UI Light";
        text-align: left;
        float: none;
        margin: 50px 0 50px 50px !important;
    }

    .usersPanel {
        background: #020;
    }

    .boxersPanel {
        background: #396;
    }

    .matchesPanel {
        background: #560;
    }

    .tablePanel {
        width: 100%;
    }
</style>