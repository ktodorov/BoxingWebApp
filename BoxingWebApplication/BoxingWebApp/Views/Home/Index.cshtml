@using Boxing.Contracts.Resources

@{
    ViewBag.Title = "Home Page";
}

<div class="boxingHomeInfo">
    <h1>@BoxingResources.ProjectTitle.ToUpper()</h1>
    <p class="boxingHomeSubInfo">@BoxingResources.AppInfo</p>
</div>

<div class="navigationWrapper">
    <div class="boxingPanel usersPanel" onclick="window.location.href='@Url.Action("Index", "Users")'">
        <h2>@BoxingResources.RegisteredUsers</h2>
        <p>
            @BoxingResources.UserInfo
        </p>
    </div>
    <div class="boxingPanel matchesPanel" onclick="window.location.href='@Url.Action("Index", "Matches")'">
        <h2>@BoxingResources.Matches</h2>
        <p>
            @BoxingResources.MatchesInfo
        </p>
    </div>
    <div class="boxingPanel boxersPanel" onclick="window.location.href='@Url.Action("Index", "Boxers")'">
        <h2>@BoxingResources.Boxers</h2>
        <p>
            @BoxingResources.BoxersInfo
        </p>
    </div>
</div>

<style>
        .boxingHomeInfo h1 {
            font-size: 50px;
            font-weight: bolder;
            font-family: "Segoe UI";
            color: #252;
            margin: 30px 0;
        }

    .boxingHomeSubInfo {
        color: #585;
        font-size: 20px;
        font-weight: bold;
        font-family: "Segoe UI Light";
        text-align: left;
        float: none;
        margin: 50px 0 50px 50px !important;
    }

    .usersPanel {
        background: #020;
    }

    .boxersPanel {
        background: #396;
    }

    .matchesPanel {
        background: #560;
    }

    .tablePanel {
        width: 100%;
    }
</style>