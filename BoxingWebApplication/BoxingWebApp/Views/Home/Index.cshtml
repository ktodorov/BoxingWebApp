@using Boxing.Contracts.Resources

@{
    ViewBag.Title = "Home Page";
}

<div class="boxingHomeInfo">
    <h1>WEB SESSIONS CHAT</h1>
    <p class="boxingHomeSubInfo">Chat with other users individually or participate in the group chat</p>
</div>

<div class="navigationWrapper">
    <div class="boxingPanel usersPanel" onclick="window.location.href='@Url.Action("Index", "Users")'">
        <h2>@BoxingResources.RegisteredUsers</h2>
        <p>
            See all registered chatters and choose who you're going to write to
        </p>
    </div>
    <div class="boxingPanel matchesPanel" onclick="window.location.href='@Url.Action("Chat", "Home")'">
        <h2>Chats</h2>
        <p>
            Come, let's have a talk
        </p>
    </div>
</div>

<style>
        .boxingHomeInfo h1 {
            font-size: 50px;
            font-weight: bolder;
            font-family: "Segoe UI";
            color: #252;
            margin: 30px 0;
        }

    .boxingHomeSubInfo {
        color: #585;
        font-size: 20px;
        font-weight: bold;
        font-family: "Segoe UI Light";
        text-align: left;
        float: none;
        margin: 50px 0 50px 50px !important;
    }

    .usersPanel {
        background: #020;
    }

    .boxersPanel {
        background: #396;
    }

    .matchesPanel {
        background: #560;
    }

    .tablePanel {
        width: 100%;
    }
</style>