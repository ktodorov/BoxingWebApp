@model BoxingWebApp.ViewModels.UsersDetailsViewModel
@{
    if (!AuthorizeExtensions.IsAuthenticated())
    {
        throw new UnauthorizedAccessException();
    }

    //var currentUser = AuthorizeExtensions.GetCurrentUser();
    //if (Model.Id != (currentUser != null ? currentUser.Id : 0))
    //{
    //    Response.RedirectToRoute("~/Index");
    //}
}
<h2 class="gridHeader">User</h2>

<div class="objectDetails">
    <h4 class="pageSubHeader">Current user</h4>

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label boxingLabel" })
        <span class="displaySpan">@Html.DisplayTextFor(m => m.Username)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label boxingLabel" })
        <span class="displaySpan">@Html.DisplayTextFor(m => m.FullName)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Rating, new { @class = "col-md-2 control-label boxingLabel" })
        <span class="displaySpan">@Html.DisplayTextFor(m => m.Rating)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsAdmin, new { @class = "col-md-2 control-label boxingLabel" })
        <span class="displaySpan">@((Model != null && Model.IsAdmin) ? "Yes" : "No")</span>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
