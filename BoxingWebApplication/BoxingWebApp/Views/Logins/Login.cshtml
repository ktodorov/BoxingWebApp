@model BoxingWebApp.ViewModels.UsersDetailsViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row centeredPanel">
    <h2 class="pageHeader">@ViewBag.Title</h2>
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Logins", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()
            <h4 class="pageSubHeader">Use a local account to log in</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label boxingLabel" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control boxingInput" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label boxingLabel" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control boxingInput", @id = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="boxingButton boxingSubmitButton" />
            </div>
        }
    </section>
    <section>
        <h4 class="pageSubHeader">
            Don't have an account yet?
        </h4>
        <p>
            @Html.ActionLink("Register as a new user", "Register", "Users", null, new { @class = "boxingHyperlink" })
        </p>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
